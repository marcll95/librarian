<refentry id="package.pending.isbn.isbn.convert">
 <refnamediv>
  <refname>
   <function>ISBN::convert</function>
  </refname>
  <refpurpose>
   converts an ISBN number from one version to another  can convert ISBN-10 to
   ISBN-13 and ISBN-13 to ISBN-10
</refpurpose>
 </refnamediv>
 <refsynopsisdiv>
  <funcsynopsis>
   <funcsynopsisinfo>require_once &apos;/ISBN.php&apos;;</funcsynopsisinfo>
   <funcprototype>
    <funcdef>
     <replaceable>string|&false;</replaceable>
     <function>ISBN::convert</function>
    </funcdef>
    <paramdef>
     string
     <parameter>$isbnin</parameter>
    </paramdef>
    <paramdef>
     integer
     <parameter>
      <optional>$verfrom = ISBN_VERSION_ISBN_10</optional>
     </parameter>
    </paramdef>
    <paramdef>
     integer
     <parameter>
      <optional>$verto = ISBN_VERSION_ISBN_13</optional>
     </parameter>
    </paramdef>
   </funcprototype>
  </funcsynopsis>
 </refsynopsisdiv>
 <refsect1 id="package.pending.isbn.isbn.convert.desc">
  &title.desc;
  &notdocumented;
</refsect1>
 <refsect1 id="package.pending.isbn.isbn.convert.param">
  &title.param;
  <para>
   <variablelist>
    <varlistentry>
     <term>
      &type.string;
      <parameter>$isbnin</parameter>
     </term>
     <listitem>
      <para>ISBN to convert, must be a valid ISBN Number</para>
     </listitem>
    </varlistentry>
   </variablelist>
   <variablelist>
    <varlistentry>
     <term>
      &type.int;
      <parameter>$verfrom</parameter>
     </term>
     <listitem>
      <para>version value of the input ISBN</para>
     </listitem>
    </varlistentry>
   </variablelist>
   <variablelist>
    <varlistentry>
     <term>
      &type.int;
      <parameter>$verto</parameter>
     </term>
     <listitem>
      <para>version value to convert to</para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>
 <refsect1 id="package.pending.isbn.isbn.convert.returns">
  &title.returns;
  <para>
   <emphasis>returns</emphasis>
   converted ISBN Number or false if conversion failed
  </para>
 </refsect1>
 <refsect1 id="package.pending.isbn.isbn.convert.throws">
  &title.throws;
  <para>
   <emphasis>throws</emphasis>
   no exceptions thrown
  </para>
 </refsect1>
 <refsect1 id="package.pending.isbn.isbn.convert.note">
  &title.note;
  &note.notstatic;
</refsect1>
</refentry>
